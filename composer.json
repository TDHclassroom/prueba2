{
    "name": "php-exercises/testing-environment",
    "description": "Entorno de desarrollo para ejercicios PHP con tests autom√°ticos",
    "type": "project",
    "require": {
        "php": "^8.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "Exercises\\": "exercises/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-watch": "phpunit --testdox",
        "analyze": "phpstan analyse exercises --level=8",
        "style-check": "phpcs exercises --standard=PSR12",
        "style-fix": "phpcbf exercises --standard=PSR12",
        "serve": "php -S localhost:8000 -t public"
    }
}
